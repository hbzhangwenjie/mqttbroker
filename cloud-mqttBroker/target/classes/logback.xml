<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="1 minutes"
               debug="false">
    <!--设置模块名，用于日志文件名和文件目录 -->
    <property name="module.name" value="mqttBroker" />
    <!--设置日志的目录 -->
    <property name="log.dir" value="./data/logs/${module.name}" />
    <!-- 输出格式 -->
    <property name="out.pattern"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %class{32}:%-4line %-5level - %m%n" />
    <!-- 活动文件的大小 -->
    <property name="max.file.size" value="200MB" />
    <!-- 保留的归档文件的最大数量 -->
    <property name="max.history" value="30" />
    <!-- 控制所有归档日志文件的总大小 -->
    <property name="total.size.cap" value="15GB" />

    <!-- 属性文件 -->
    <!-- 默认的控制台日志输出，一般生产环境都是后台启动，这个没太大作用 -->
    <appender name="console"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${out.pattern}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="logfile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.dir}/${module.name}.log</file>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>${log.dir}/${module.name}.%d{yyyy-MM-dd-HH}.%i.log
            </FileNamePattern>
            <maxFileSize>${max.file.size}</maxFileSize>
            <maxHistory>${max.history}</maxHistory>
            <totalSizeCap>${total.size.cap}</totalSizeCap>
        </rollingPolicy>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${out.pattern}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="ERROR_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.dir}/${module.name}-error.log</file>
        <filter
                class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.dir}/${module.name}-error.%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <maxFileSize>${max.file.size}</maxFileSize>
            <maxHistory>${max.history}</maxHistory>
            <totalSizeCap>${total.size.cap}</totalSizeCap>
        </rollingPolicy>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${out.pattern}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- root 默认日志配置 ，只能为ERROR或者WARN！ -->
    <root level="info">
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="console"/>
    </root>

    <!--业务模块的包的日志配置 -->
    <logger name="com.zwj.mqtt" level="debug">
        <appender-ref ref="logfile" />
    </logger>
</configuration>